# Wordler Training Configuration
# Copy this file to .env and modify values as needed

# ============================================================================
# Training Settings
# ============================================================================

# Learning rate for the optimizer (range: 0.0 < x <= 1.0)
TRAINING_LEARNING_RATE=0.001

# Discount factor (gamma) for computing returns (range: 0.0 <= x <= 1.0)
TRAINING_DISCOUNT=1.0


# ============================================================================
# Environment Settings (Game Rewards)
# ============================================================================

# Penalty for submitting an invalid word (must be < 0.0)
ENV_INVALID_WORD_PENALTY=-1.0

# Reward for winning a game (must be > 0.0)
ENV_WIN_REWARD=10.0

# Reward for placing a letter correctly (must be > 0.0)
ENV_CORRECT_LETTER_REWARD=1.0

# Reward for placing a correct letter in the wrong position (must be > 0.0)
ENV_LETTER_PRESENT_REWARD=0.5


# ============================================================================
# Actor Model Architecture Settings
# ============================================================================

# Dimension of the embedding layers (must be > 0)
MODEL_EMBEDDING_DIM=128

# Dimension of the hidden layers (must be > 0)
MODEL_HIDDEN_DIM=256

# Number of sequence processing layers (must be > 0)
MODEL_NUM_SEQ_LAYERS=2

# Dropout rate for the model (range: 0.0 <= x < 1.0)
MODEL_DROPOUT=0.1